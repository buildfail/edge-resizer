{
  "name": "@ctohm/edge-resizer",
  "version": "1.0.0",
  "description": "Clever routing to serve image variations using images.weserv.nl + cloudflare edge cache",
  "main": "dist/worker.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ctohm/edge-resizer"
  },
  "types": "types/main.d.ts",
  "files": [
    "src",
    "dist",
    "test"
  ],
  "scripts": {
    "docs:build": "vitepress build docs",
    "docs:dev": "vitepress dev docs -p 3000",
    "docs:deploy": "yarn docs:build && cp -R docs/images docs/.vitepress/dist/images && cp docs/favicon.svg docs/.vitepress/dist/ && yarn pages",
    "pages": "gh-pages -d docs/.vitepress/dist",
    "deploy": " export COMMIT=`git rev-parse --short HEAD`;yarn write_commit && wrangler    publish -c ./wrangler.develop.toml",
    "miniflare": "NODE_ENV=development miniflare  dist/worker.js -c ./wrangler.develop.toml -w  -d --wrangler-env=develop ",
    "format": "prettier --write '**/*.{ts,js,css,json,md}'",
    "eslint": "eslint --ext js --ext ts --ignore-path .eslintignore {src,test}/*.{js,ts}",
    "build:prod": " wrangler   -c ./wrangler.develop.toml build",
    "build:lib": "cd lib && yarn build && cd -",
    "publish:lib": "cd lib && yarn build && yarn publish && cd -",
    "write_commit": "export COMMIT=`git rev-parse --short HEAD`;export CURRENT=`cat wrangler.develop.toml | grep RELEASE | head -1 | cut -d'\"' -f2` ; sed -i \"s/$CURRENT/$COMMIT/g\" wrangler.develop.toml; sed -i \"s/$CURRENT/$COMMIT/g\" wrangler.toml",
    "test": "rm -rf .mf/cache/default  && node  --experimental-vm-modules `yarn bin`/ava -s   test/*.test.mjs  --silent --quiet ",
    "transpile": "tsc --project ."
  },
  "author": "Felipe Figueroa <ffigueroa@ctohm.com>",
  "license": "MIT OR Apache-2.0",
  "devDependencies": {
    "@cloudflare/workers-types": "^2.0.0",
    "@cloudflare/wrangler": "^1.19.5",
    "@types/itty-router-extras": "^0.4.0",
    "@types/node": "^14.14.31",
    "@types/service-worker-mock": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "ava": "^3.15.0",
    "edge-resizer": "link:./lib",
    "esbuild": "^0.12.22",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-security": "^1.4.0",
    "gh-pages": "^3.2.3",
    "itty-router": "^2.4.4",
    "itty-router-extras": "^0.4.2",
    "miniflare": "^1.3.3",
    "prettier": "^2.2.1",
    "typescript": "^4",
    "vitepress": "^0.20.1",
    "vue-advanced-cropper": "^2.7.0",
    "worktop": "^0.7.3"
  },
  "dependencies": {}
}
