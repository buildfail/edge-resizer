{
  "name": "@ctohm/edge-resizer",
  "version": "1.0.0",
  "description": "Clever routing to serve image variations using images.weserv.nl + cloudflare edge cache",
  "main": "src/worker.js",
  "types": "types/main.d.ts",
  "scripts": {
    "docs:build": "vitepress build docs",
    "docs:dev": "vitepress dev docs -p 3000",
    "deploy": "wrangler publish",
    "dev": "wrangler dev --env=dev",
    "format": "prettier --write '**/*.{ts,js,css,json,md}'",
    "eslint": "eslint --ext js --ext ts --ignore-path .eslintignore {src,test}/*.{js,ts}",
    "build": "node esbuild.mjs",
    "miniflare": "NODE_ENV=development miniflare dist/worker.js -c ./wrangler.toml -w  -d --wrangler-env=dev ",
    "test": "rm -rf .mf/cache/default && wrangler build && node  --experimental-vm-modules `yarn bin`/ava -s   test/handler.test.mjs  --silent --quiet ",
    "transpile": "tsc --project ."
  },
  "author": "Felipe Figueroa <ffigueroa@ctohm.com>",
  "license": "MIT OR Apache-2.0",
  "devDependencies": {
    "@cloudflare/workers-types": "^2.0.0",
    "@types/node": "^14.14.31",
    "@types/service-worker-mock": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "ava": "^3.15.0",
    "esbuild": "^0.12.22",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-security": "^1.4.0",
    "itty-router": "^2.4.4",
    "itty-router-extras": "^0.4.2",
    "miniflare": "^1.3.3",
    "prettier": "^2.2.1",
    "typescript": "^4",
    "vitepress": "^0.20.1"
  },
  "dependencies": {}
}
