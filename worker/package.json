{
  "name": "@ctohm/edge-resizer-worker",
  "version": "1.0.0",
  "description": "Clever routing to serve image variations using images.weserv.nl + cloudflare edge cache",
  "main": "dist/worker.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ctohm/edge-resizer"
  },
  "types": "types/main.d.ts",
  "files": [
    "src",
    "dist",
    "test"
  ],
  "scripts": {
    "get_commit":"export COMMIT=`git rev-parse --short HEAD`",
    "deploy": "  wrangler    publish -c ./wrangler.develop.toml",
    "miniflare": "NODE_ENV=development miniflare  dist/worker.js -c ./wrangler.develop.toml -w  -d --wrangler-env=develop ",
    "build:dev": " wrangler   -c ./wrangler.develop.toml build",
    "write_commit": "npm run get_commit;echo COMMIT is $COMMIT;export CURRENT=`cat wrangler.develop.toml | grep RELEASE | head -1 | cut -d'\"' -f2` ; sed -i \"s/$CURRENT/$COMMIT/g\" wrangler.develop.toml; sed -i \"s/$CURRENT/$COMMIT/g\" wrangler.toml",
    "test": "rm -rf .mf/cache/default  && node  --experimental-vm-modules `yarn bin`/ava -s   test/*.test.mjs  --silent --quiet ",
    "transpile": "tsc --project ."
  },
  "author": "Felipe Figueroa <ffigueroa@ctohm.com>",
  "license": "MIT OR Apache-2.0",
  "devDependencies": {
    "@cloudflare/workers-types": "^2.0.0",
    "@types/itty-router-extras": "^0.4.0",
    "@types/node": "^14.14.31",
    "@types/service-worker-mock": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "ava": "^3.15.0",
    "edge-resizer": "^1.3.0",
    "esbuild": "^0.12.22",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "itty-router": "^2.4.4",
    "itty-router-extras": "^0.4.2",
    "miniflare": "^1.3.3",
    "prettier": "^2.2.1",
    "typescript": "^4"
  },
  "dependencies": {},
  "peerDependencies": {
    "wrangler": "^0.0.0-beta.6"
  },
  "optionalDependencies": {}
}
